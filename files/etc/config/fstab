
config global
	option anon_swap '0'
	option auto_swap '1'
	option auto_mount '1'
	option delay_root '5'
	option check_fs '0'
	option anon_mount '1'

config mount
	option enabled '1'
	option label 'mx500'
	option target '/opt/'
	option fstype 'ext4'

config mount
	option target '/mnt/sdc1'
	option enabled '1'
	option label 'sd'
	option fstype 'ext4'

